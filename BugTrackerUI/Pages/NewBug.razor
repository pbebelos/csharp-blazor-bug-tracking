@page "/new-bug"

<h3>Add New Bug</h3>

<EditForm Model="AddBug">
    <InputText @bind-vale="@AddBug.Title" placeholder="Enter Title"></InputText>
    <InputText @bind-vale="@AddBug.Description" placeholder="Enter Description"></InputText>
    <InputNumber @bind-Value="@AddBug.Priority" placeholder="Enter Priority"></InputNumber>

    <button type="submit">Add Bug</button>
</EditForm>